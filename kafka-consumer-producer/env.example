# Configuration Kafka - Exemple de fichier .env
# Copiez ce fichier vers .env et remplissez les valeurs

# Paramètres de connexion (requis)
KAFKA_BOOTSTRAP_SERVERS=kafka1:9092,kafka2:9092
KAFKA_USERNAME=votre_username
KAFKA_PASSWORD=votre_password

# Paramètres de sécurité (optionnels, valeurs par défaut)
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN

# Paramètres de topics
KAFKA_TOPIC_PREFIX=test-prometheus
KAFKA_NUM_TOPICS=10

# Paramètres producteur
KAFKA_MESSAGES_PER_SECOND=1000
KAFKA_NUM_THREADS=5

# Paramètres consommateur
KAFKA_CONSUMER_GROUP=prometheus-test-group
KAFKA_NUM_CONSUMERS=1
KAFKA_AUTO_OFFSET_RESET=earliest

# Durée d'exécution
KAFKA_DURATION_MINUTES=60

# Paramètres SSL (optionnels)
# KAFKA_SSL_CAFILE=/path/to/ca.pem
# KAFKA_SSL_CERTFILE=/path/to/cert.pem
# KAFKA_SSL_KEYFILE=/path/to/key.pem
# KAFKA_SSL_PASSWORD=key_password

# Mode verbeux
KAFKA_VERBOSE=false
